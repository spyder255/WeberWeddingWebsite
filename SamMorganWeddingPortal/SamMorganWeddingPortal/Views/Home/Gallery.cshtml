@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Home/_Template.cshtml";
}

@section head
{
    <link rel="stylesheet" type="text/css" href="~/Scripts/shadowbox/shadowbox.css">
}

@section scripts
{
    <script type="text/javascript" src="~/Scripts/shadowbox/shadowbox.js"></script>
    <script type="text/javascript">
        Shadowbox.init({
            slideshowDelay: 5,
            modal: false,
            continuous: true
        });

        $(document).ready(function () {
            $(".gallery-image a").each(function () {
                var imageUrl = $(this).attr("href");
                var thumbUrl = imageUrl.replace("_full.", "_thumb.");
                $(this).css("background-image", "url('" + thumbUrl + "')");
            });
        });

        //style = "background-image:url('../../Images/gallery/gallery001_thumb.jpg');"
    </script>
}


<div class="row theme-color-background gradient-75">
    <div class="col-xs-12 gallery">
