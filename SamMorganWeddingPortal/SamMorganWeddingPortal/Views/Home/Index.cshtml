@{
    ViewBag.Title = "Welcome";
}

<div class="row theme-color-background gradient-75">
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="welcome-box-outer">
                <div class="welcome-box-inner">
                    <div class="header-text theme-color-foreground">Welcome</div>
                    <div>Welcome to our wedding! We look forward to seeing you all.</div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <img src="../../Images/welcome1.jpg" id="welcomeImage1" class="welcome-image" />
            <img src="../../Images/welcome2.jpg" id="welcomeImage2" class="welcome-image display-none" />
            <img src="../../Images/welcome3.jpg" id="welcomeImage3" class="welcome-image display-none" />
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        var imageNum;

        $(document).ready(function () {
            imageNum = 1;
            window.setInterval(rotateWelcomeImage, 7000);
        });

        function rotateWelcomeImage() {
            $("#welcomeImage" + imageNum).fadeOut(700, function() {
                imageNum++;
                if (imageNum > 3) {
                    imageNum = 1;
                }
                $("#welcomeImage" + imageNum).hide();
                $("#welcomeImage" + imageNum).fadeIn(700);
            });
        }
    </script>
}

