@model SamMorganWeddingPortal.Models.GuestBookEntryModel

<div class="guestbook-entry">
    <div class="form-group">
        <label for="author">Name</label>
        <input type="text" class="form-control" name="NewEntry.Author" id="NewEntry.Author" placeholder="Your name"/>
    </div>
    <div class="form-group">
        <label for="message">Message</label>
        <textarea type="text" class="form-control" rows="3" name="NewEntry.Message" id="NewEntry.Message" placeholder="Enter your message"></textarea>
    </div>
</div>           